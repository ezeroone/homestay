                        </div>

                    <div class="control-group">
                        <div class="control-label">
                            <label for="PlaceName">Name</label>
                        </div>
                        <div class="controls">
                           
                            @Html.TextBoxFor(m=>m.Name,new{@class="span8"})
                        </div>

                    </div>
                     <div class="control-group">
                        <div class="control-label">
                            <label for="PlaceName">Recommandation</label>
