@using eResorts
@model eResorts.Models.VisitorModel
@{
    ViewBag.Title = "VisitorRegistration";
    Layout = "~/Views/Shared/_RLayout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
@section Styles
{
    <link href="@Url.Content("~/Content/AjaxForms.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" type="text/css"/>
}

<section id="main">
    <div class="body-text">
    <div class="container-fluid">
        <div class="row-fluid">
            
            <div class="span12">
                <div class=" qbox form-horizontal contact-info">
                    <h3><i class="pull-right"></i>Visitor Registrattion</h3>
                    <form action="@Url.Content("/Account/VisitorRegistration")" method="post">
                        @Html.HiddenFor(x => x.Id)
                        @Html.ValidationSummary(true)
                        @Html.ValidationMessage("InvalidEmailPass")
  
                        @*  <div class="control-group">
                        <div class="control-label">
                            <label for="Title">Title</label>
                        </div>
                        <div class="controls">
                            @Html.DropDownListFor(model => model.TitleId, (SelectList)ViewBag.Titles, new { @class = "span3" })
                        </div>

                    </div>*@


                        <div class="control-group">
                            <div class="control-label">
                                <label for="FirstName">FirstName</label>
                            </div>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "span4" })
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </div>

                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                <label for="LastName">LastName</label>
                            </div>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "span4" })
                                @Html.ValidationMessageFor(model => model.LastName)
                            </div>

                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                <label for="Email">Email</label>
                            </div>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Email, new { @class = "span5" })
                            
                                <span class="help-inline" style="color:green"> this will be the login user name</span>
                                <br/>
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>

                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                <label for="Password">Password</label>
                            </div>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Password, new { @class = "span3",@type="password" })
                                @Html.ValidationMessageFor(model => model.Password)
                                <span class="help-inline" style="color:green"> minimum 6 characters </span>
                            </div>

                        </div>

                        <div class="control-group">

                            <div class="controls">
                                @Html.AreYouaHuman("6aa712dd5b8430ca0c74a5f1312a674c455cfde7") 
                                @if (Model.Id == 0)
                                {
                                    <input type="submit" value="Create Account" class="btn btn-primary" />
                                }
                                else
                                {
                                    <input type="submit" value="Edit Account" class="btn btn-primary" />
                                }
                                @* <input id="btnback" value="Back" class="btn" type="button">*@
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            
        </div>
    </div>
        </div>
</section>
<div>&nbsp;</div>