<link href="~/content/css/style.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/content/css/map/jquery-gmaps-latlon-picker.css" />
<script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
<script src="~/content/js/jquery-gmaps-latlon-picker.js"></script>
<script src="~/content/js/libs/jquery.ui.touch-punch.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $("#btnUpdate").click(function () {

            window.opener.$("#Latitude").val($(".gllpLatitude").val());
            window.opener.$("#Longitude").val($(".gllpLongitude").val());
            self.close();

        });

    });
</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Find the latitude & longitude</title>
</head>
<body>
    <div class="container-fluid">

        <div class="row-fluid">
            <div class="span12">
                <div class="qbox">
                    <h3><i class="pull-right"></i>Find the latitude & longitude</h3>
                    <div class="gllpLatlonPicker">
                        <div class="control-group">
                            <div class="control-label">
                                <label>Search the place</label>
                            </div>
                            <div class=" controls">
                                <input type="text" class="gllpSearchField span5">
                                <input type="button" class="gllpSearchButton btn btn-primary" value="Search">
                            </div>

                        </div>
                        <div class="control-group">
                            <div class="gllpMap">Google Maps</div>
                        </div>
                        <div class="control-group">
                            <div class="control-label">
                                <label>Lat & Long</label>
                            </div>
                            <div class=" controls">
                                <input type="text" class="gllpLatitude span3" readonly="readonly" value="7.082426924700592" />
                                /
                             
                                <input type="text" class="gllpLongitude span3" readonly="readonly" value="79.97687530238181" />
                                <input type="hidden" class="gllpZoom " value="7" />
                                <input id="btnUpdate" type="button" class="gllpUpdateButton1 btn btn-success" value="Update Location">
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>


    </div>
</body>
</html>
