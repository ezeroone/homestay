@model eResorts.Models.ContactUs
@{
    ViewBag.Title = "contact us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{

   <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

}
<script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>


    <section id="main">
			<div class="body-text">
				<div class="container-fluid ">
					<div class="row-fluid">
						<h1 class="span12">Contact Us</h1>
					</div>			
					<!-- 6/4 columns -->
					<!--single map-->
					<div class="row-fluid">
					    <div id="single_map" style="width:100%; height:300px;" data-address="Colombo, Sri Lanka" data-iconrel="img/pin/pin.png" data-zoom="10"> </div>
                    </div>
					<div class="row-fluid">
						<div class="span3">
								<h4>We're Here</h4>
								<p>
									Besthomestay Srilanka<br />
									12-123 1/2 Spadina St SE<br />
									Galadari<br />
									Srilanka
								</p>

								<strong>Phone:</strong> 0112-223553<br />  
								<strong>Fax:</strong> 0112-223553 -6 <br />
						        <strong>Email:</strong> <a href="mailto:besthomestay@email.com"> besthomestay@email.com</a><br/>
                                <strong>Skype:</strong> besthomestay
								
						</div>
						<div class="span9"> 
							<div id="message"></div>
							<form class="contact-agent-form" method="post" action="@Url.Content("~/Home/contactus")" >
								<div class="row-fluid">
			                        <div class="field span6">
			                            <div class="span12">
			                                <label for="FirstName" accesskey="U">First Name*</label>
			                                <input type="text" class="span12" name="FirstName" value="" id="FirstName" placeholder="First Name">
			                            </div>
			                           
			                        </div>
			                        <div class="field span6">
			                            <div class="span12">
			                                <label for="LastName" accesskey="O">Last Name*</label>
			                                <input type="text" class="span12" name="LastName" value="" id="LastName" placeholder="Last Name">
			                            </div>
			                           
			                        </div>
		                        </div>
								<div class="row-fluid">
			                        <div class="field span6">
			                            <div class="span12">
			                                <label for="Email" accesskey="E">Email*</label>
			                                <input type="email" class="span12" name="Email" value="" id="Email" placeholder="your_email@address.com">
			                            </div>
			                           
			                        </div>
			                        <div class="field span6">
			                            <div class="span12">
			                                <label for="ContactNumber" accesskey="P">Contact Number</label>
			                                <input type="tel" class="span12" name="ContactNumber" value="" id="ContactNumber" placeholder="( 000 ) 000 - 0000">
			                            </div>
			                           
			                        </div>
		                        </div>
								<div class="row-fluid">
			                        <div class="field span12">
			                            <div class="span12">
			                                <label for="Comments" accesskey="C">Comments*</label>
			                                <textarea class="span12" id="Comments" rows="4" name="Comments" placeholder="Please type your comments here.."></textarea>
			                            </div>
			                        </div>
		                        </div>
								
		                        <div class="button-align">
		                        	<input type="submit" class="btn"  value="Submit" />
		                        </div>
							    <div class="divider"></div>
                                <div>&nbsp;</div>
							</form>
						</div>				
					</div>
					<!-- end 6/4 columns -->
				</div>
			</div>

			<!-- /container -->
		</section>
