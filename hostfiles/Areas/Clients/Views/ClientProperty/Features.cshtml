@using eResorts.Models
@using eZeroOne.Common
@using eZeroOne.Domain
@{
    ViewBag.Title = "Features";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $("#btnback").click(function () {
                window.location = "/Clients/ClientProperty/PropertyList";
            });
             
            $(".icon-remove").click(function (e) {
                var id = $(this).attr("id");
                 
                $("#ItemId").val(id);
                
            });
             
            $(".icon-edit").click(function (e) {
                var id = $(this).attr("id");
                var meal = $(this).attr("feature");
                $("#ItemId").val(id);
                $("#feature").val(meal);

            });
             
             
            $("#btndelete").click(function (e) {

                var id = $("#ItemId").val();
                if (id > 0) {

                    var url = "/Clients/ClientProperty/DeleteFeatures?id=" + id;
                    $.post(url, function () {
                        window.location = "/Clients/ClientProperty/Features";
                    });
                     
                }
                
            });
             
            $("#btnadd").click(function (e) {

                var id = $("#ItemId").val();
                if ($("#feature").val() != "") {

                    var url = "/Clients/ClientProperty/AddFeature?id=" + id + "&name=" + $("#feature").val();
                    $.post(url, function () {
                        window.location = "/Clients/ClientProperty/Features";
                    });

                }

            });
             
        });
    </script>
      <script type="text/javascript">
          $(document).ready(function () {

              $("#btnback").click(function () {
                  window.location = "/Clients/ClientProperty/PropertyList";
              });

              $(".icon-remove").click(function (e) {
                  var id = $(this).attr("id");

                  $("#ItemId").val(id);

              });

              $(".icon-edit").click(function (e) {
                  var id = $(this).attr("id");
                  var meal = $(this).attr("feature");
                  var groupid = $(this).attr("groupid");
                  //alert(groupid)
                  $("#ItemId").val(id);
                  $("#feature").val(meal);
                  $("#FeatureGroup").val(groupid);

              });


              $("#btndelete").click(function (e) {

                  var id = $("#ItemId").val();
                  if (id > 0) {

                      var url = "/Clients/ClientProperty/DeleteFeatures?id=" + id;
                      $.post(url, function () {
                          window.location = "/Clients/ClientProperty/Features";
                      });

                  }

              });

              $("#btnadd").click(function (e) {

                  var id = $("#ItemId").val();
                  var groupId = $("#FeatureGroup").val();
                  if ($("#feature").val() != "") {

                      var url = "/Clients/ClientProperty/AddFeature?id=" + id + "&groupId=" + groupId + "&name=" + $("#feature").val();
                      $.post(url, function () {
                          window.location = "/Clients/ClientProperty/Features";
                      });

                  }

              });

              $(".icon-arrow-down").click(function (e) {
                  var id = $(this).attr("id");
                  var orderId = $(this).attr("order-id");
                  if (orderId > 0) {
                      $("#loader").show();
                      orderId = parseInt(orderId) + 1;
                      var url = "/Clients/ClientProperty/OrderFeature?id=" + id + "&orderId=" + orderId;
                      $.post(url, function () {
                          window.location = "/Clients/ClientProperty/Features";
                      });

                  }

              });

              $(".icon-arrow-up").click(function (e) {
                  var id = $(this).attr("id");
                  var orderId = $(this).attr("order-id");
                  if (orderId > 1) {
                      $("#loader").show();
                      orderId = parseInt(orderId) - 1;
                      var url = "/Clients/ClientProperty/OrderFeature?id=" + id + "&orderId=" + orderId;
                      $.post(url, function () {
                          window.location = "/Clients/ClientProperty/Features";
                      });

                  }

              });

          });
    </script>
}

<style>
    #loader
    {
        background:#fff url(/Content/images/loading.gif) no-repeat center center;
        height: 100px;
        width: 100px;
        position: fixed;
        z-index: 1000;
        left: 50%;
        top: 50%;
        margin: -25px 0 0 -25px;
    }
</style>
<div id="loader" style="display:none"></div>
@Html.Hidden("ItemId","0")

<!-- delete record-->
<div class="modal hide" id="deleteRecord">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            x
        </button>
        <h3>Delete Features</h3>
    </div>
    <div class="modal-body">
        <span> Are you sure ? do you wish to delete this <span style="color:red;font-size:14px">Features</span> ?</span>
    </div>
    <div class="modal-footer">
        <a href="#" id="btncancel" class="btn" data-dismiss="modal">No </a>
        <a href="#" id="btndelete" class="btn btn-primary" data-dismiss="modal">Yes </a>
    </div>
</div>
<!-- End delete-->

<!-- add/edit record-->
<div class="modal hide" id="editRecord">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            x
        </button>
        <h3>Add/Edit Features</h3>
    </div>
    <div class="modal-body">
        <div class="control-group">
            <div class="control-label">
                <span> Feature group</span>
            </div>
            <div class="control-label">
                @Html.DropDownList("FeatureGroup",(SelectList)ViewBag.FeatureGroups, new { @class = "chzn-select span3", @style = "100%" })

            </div>
        </div>
        <br/>
        <div class="control-group">
            <div class="control-label">
                <span> Features</span>
            </div>
            <div class="controls">
                &nbsp; &nbsp; &nbsp; &nbsp;<input type="text" id="feature" class="span3"/>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#" id="btneditcancel" class="btn" data-dismiss="modal">No </a>
        <a href="#" id="btnadd" class="btn btn-primary" data-dismiss="modal">Save </a>
    </div>
</div>
<!-- End -->

