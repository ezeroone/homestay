        @*<title>@ViewBag.Title</title>*@
        <!-- Load Google Web Font -->
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
        <!-- Load style.css: contains all css files concatenated to one single file -->
        <link href="~/content/css/style.css" rel="stylesheet">
        <link href="~/content/css/imperio.css" rel="stylesheet">
        <link href="~/content/css/tinyslider.css" rel="stylesheet">
    
    </head>

    <body>
      
        <div class="header1">
        <!--logo area start-->
            <div class="logo-area">
                @*<span style="float:right;color:#E25A00 "> Hot line (24 x 7) ::(+94) 772-367061 </span>*@
                 <a href="/Home/Index"><span id="logo"></span></a>

                <span id="secondary-logo"></span>
                
            </div>
    <!--end logo area-->

    <!--nav bar start-->
        <nav class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <!--mobile nav icon (hidden:CSS)-->
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">menu
                    </a>
                    <!--end btn-navbar-->
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li id ="home" class="">
                                <a class="menuHighlight"  href="/Home/Index"><span class="icon-home"></span>Home</a>
                            </li>
                            @*<li>
									<a href="/Property/Properties">Properties</a>
								</li>*@
                            @*<li id="detailsearch" class="active">
                                <a href="/Property/Search">Detail search</a>
                            </li>*@
                      
                        </ul>
                        <ul class="nav pull-right">
                             <li>
                            <a href="/Home/aboutus">About Us</a>
                        </li>
                        <li>
                            <a href="/Home/contactus">Contact Us</a>
                        </li>
                            <li class="dropdown">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">Registration<b class="caret"></b></a>
                                <ul class="dropdown-menu" id="menu1">
                                    <li>@Html.ActionLink("Visitor Registration", "VisitorRegistration", "Account", new { area = "" }, new { @class = "" })</li>
                                    <li>@Html.ActionLink("Post Your Property", "ClientRegistration", "Account", new { area = "" }, new { @class = "" })</li>

                                </ul>
                            </li>
                     

                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="pull-right">
                                    <a href="/Account/Login">Login</a>
                                </li>
                            }
                        
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="pull-right">
                                    <a href="/Account/Logout">Sign out</a>
                                </li>  
                            }
                        </ul>
                    </div>
                    <!-- end nav-collapse -->
                </div>
                <!-- end container-->
            </div>
            <!-- end navbar-inner -->
        </nav>
</div>
    <!--end nav bar-->
        @RenderBody()
        
        @Html.Partial("_Footer")

   </body>
        <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
